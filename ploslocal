local plosversion

-- ! DO NOT EDIT --


plosversion = 1

if 1 then
	print("this game uses ploslocal. the current version is 1.")
	print("recording version...")
	wait(6.1)
	checkRobloxEdition()
	checkGameVersion()
	print("recording successful!")
end

if 2 then
	error("game recording error! reading HTTPS requests from and back failed. error code -12 - WARN_FUTUREVERSION")
end

if nil then
	warn("game version checker error | reading index as 'nil.'")
	error("ploslocal error 01 | failed to read package.")
end

